        "tradle.LifeInsurance",
        "tradle.MortgageProduct",
        "tradle.onfido.CustomerVerification"
      ],
      "queueSends": false,
      "autoApprove": true,
      "autoVerify": false,
      "approveAllEmployees": true,
      "plugins": {
        "customize-message": {
          "tradle.FormRequest": {
            "tradle.PhotoID": "Please click to scan your **ID document**",
