{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": true,
    "outDir": "lib",
    "lib": [
      "dom",
      "es7",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "types": [
      "node",
      "aws-sdk",
      "sinon",
      "lodash",
      "graphql",
      "koa",
      "superagent",
      "@tradle/dynamodb"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.js", "src/test/mock/"],
  "compileOnSave": false
}
