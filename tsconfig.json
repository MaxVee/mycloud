{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "rootDir": ".",
    "lib": ["es2015", "es2015.promise"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "lib/types/*"
      ]
    },
    "types": [
      "node",
      "aws-sdk"
    ]
  },
  "include": ["lib/**/*.ts", "test/**/*.ts", "samplebot/**/*.ts"],
  "exclude": ["node_modules", "**/*.js"]
}
