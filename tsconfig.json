{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "rootDir": ".",
    "allowJs": true,
    "lib": ["es2015"]
  },
  "include": ["lib/**/*", "samplebot/**/*", "test/**/*"],
  "exclude": ["node_modules"],
  "types": ["node", "aws-sdk"]
}
