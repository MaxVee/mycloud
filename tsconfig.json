{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "rootDir": "project/",
    "allowJs": true,
    "lib": ["es2015"]
  },
  "include": [
    "project/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "project/node_modules"
  ],
  "types": [
    "node",
    "aws-sdk"
  ]
}
