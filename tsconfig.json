{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "rootDir": "project/lib"
  },
  "include": [
    "project/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "project/node_modules"
  ],
  "types": [
    "node",
    "aws-sdk"
  ]
}
